<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carrillo.agenda.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearV_primera"
        android:weightSum="1">

        <TextView
            android:text="Busqueda de nota:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Agent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearH_segunda">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_buscar"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/btn_insertar" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:id="@+id/lista_tareas"
            android:layout_weight="1.02" />

        <Button
            android:text="Salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_salir" />
    </LinearLayout>

</LinearLayout>
